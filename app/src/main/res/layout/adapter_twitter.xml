<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/text_name"
        android:layout_toEndOf="@+id/image_profile"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_profile"
        android:paddingRight="6dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="screen_name"
        android:id="@+id/text_screen_name"
        android:layout_toEndOf="@+id/text_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_name"
        android:layout_toLeftOf="@+id/text_elapsed_time"
        android:layout_toStartOf="@+id/text_elapsed_time"
        android:singleLine="true"
        android:textColor="#f999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="elapsed_time"
        android:id="@+id/text_elapsed_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#f999"
        android:singleLine="true"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:id="@+id/text_text"
        android:layout_below="@+id/text_name"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile"
        android:layout_alignRight="@+id/text_elapsed_time"
        android:layout_alignEnd="@+id/text_elapsed_time"
        android:autoLink="web"
        android:paddingRight="6dp" />

</RelativeLayout>